<style>
    .orders_container{
        display:flex;
        flex-wrap: wrap;
    }
    .basket_container{
        border:1px solid orange;
        padding: 10px;
    }
    .order_card{
        border:1px solid blue;
        padding: 10px;
        width:200px;
    }
</style>

<div class='orders_container'>
    {{#each orders}}
        <div class='order_card'>
            <p>username: {{this.username}}</p>
            <p>address: {{this.address}}</p>
            <p>phone number: {{this.phone_number}}</p>
            <p>ordered date: {{this.date}}</p>
            <div class='basket_container'>
                {{#each this.basket}}
                    <p>{{this.pizza_description.pizza_name}} x{{this.count}}</p>
                {{/each}}
            </div>
            <a href='/admin/orders/delete/?order_id={{this._id}}'>delete</a>
        </div>
    {{/each}}
</div>