<style>
    .pizza_container{
        display:flex;
        flex-wrap:wrap;
    }

    .pizza_card{
        border:3px solid orange;
        border-radius: 10px;
        height:200px;
        width:200px;
        padding:10px;
        margin:10px;
        position:relative;
    }

    .recipe{
        font-size:0.7em;
        color:grey;
    }

    .price{
        position:absolute;
        bottom:20px;
        right:10px;
    }

    .to_basket{
        position:absolute;
        bottom:10px;
        right:10px;
    }
</style>

<div class='pizza_container'>
    {{#each pizzas}}
        <div class='pizza_card'>
            <p class='item_name'>{{this.pizza_name}}</p>
            <p class='recipe'>{{this.recipe}}</p>
            <h4 class='price'>{{this.price}}</h4>
            <a class='to_basket' href='/home/basket/?pizza_id={{this._id}}'>add to basket</a>
        </div>
    {{/each}}
</div>